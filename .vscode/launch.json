    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "launch",
            "name": "Debug - GDB",
            "target": "./target/debug/gboxide",
            "arguments": "./roms/tetris.gb",
            "env": {"RUST_BACKTRACE": "1"},
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug - CodeLLDB",
            "program": "${workspaceFolder}/target/debug/gboxide",
            "args": [
                //"./roms/test/cpu_instrs/cpu_instrs.gb"    // MBC1
                "./roms/tetris.gb"      // ROM
                //"./roms/dr_mario.gb"    // ROM
                //"./roms/kirby_1.gb"     // MBC1 - freezes, no output
                //"./roms/awakening.gb"   // MBC5 RAM BATTERY
                //"./roms/pokemon_red.gb" // MBC3 RAM BATTERY
            ],
            "env": {"RUST_BACKTRACE": "1"},
            "cwd": "${workspaceRoot}"
        }
    ]
}